<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ikpmd">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/hsleiden_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.BaseActivity" />
        <activity android:name=".activity.OverviewActivity"></activity>
        <activity android:name=".activity.course.CourseActivity" />
        <activity android:name=".activity.SettingsActivity" />
        <activity android:name=".activity.course.AddCourseActivity" />
        <activity android:name=".activity.course.EditCourseActivity" />
        <activity android:name=".activity.AccountActivity" />
        <activity
            android:name=".activity.course.Course2Activity"
            android:label="@string/title_activity_course2"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.IntroActivity" />
    </application>

</manifest>